extends layout

block head
  link(rel='stylesheet', href='/stylesheets/loginsignup.css')

block content
  form(action='/signup', method='post')
    input#username(type='text', name='username', placeholder='Username', required, pattern="^[a-zA-Z0-9]+([._]?[a-zA-Z0-9]+)*$", title='Username can contain letters and numbers, and must be from 3 to 12 characters')
    input#pass(type='password', name='password', placeholder='Password', required)
    input#passConf(type='password', name='passConf', placeholder='Confirm Password', required)
    input(type='text', name='id', placeholder='ID (ask for this)', required, pattern="^[a-zA-Z0-9]+([._]?[a-zA-Z0-9]+)*$", title='Password can contain letters and numbers, and must be more than or equal to 6 characters')
    input(type='submit', value='Sign up')
  script(src="signupScript.js")
