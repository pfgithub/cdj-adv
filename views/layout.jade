doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    block head
  body
    script(src="jquery-2.1.4.min.js")
    div#content
      block content
    
    ul#navbar
      li.navi.navilink.left
        a(href="/") Home
      - if (locals.uname)
        li.navi.left
          div Welcome, #{uname}
        block navbar
        li.navi.navilink.right
          a(href="/logout") Log out
      - else 
        li.navi.left
          div Welcome
        block navbar
        li.navi.navilink.right
          a(href="/signup") Signup
        li.navi.navilink.right
          a(href="/login") Login
